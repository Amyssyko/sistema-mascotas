// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  ADMIN
  USER
  SUPERADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  person    Person?
  blog      Post[]
}

model Post {
  id          Int       @id @default(autoincrement())
  description String?
  isActived   Boolean
  User        User?     @relation(fields: [userId], references: [id])
  userId      Int?
  Pet         Pet?      @relation(fields: [petId], references: [id])
  petId       Int?      @unique
  postDate    DateTime? @default(now())
  postUpdate  DateTime? @updatedAt
}

model Person {
  dni       String     @id @db.VarChar(10)
  firstName String
  lastName  String
  birthDate DateTime
  phone     String
  address   String
  photo     String?
  userId    Int?       @unique
  user      User?      @relation(fields: [userId], references: [id])
  adoption  Adoption[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Pet {
  id          Int        @id @default(autoincrement())
  name        String
  typePet     String?
  age         Int?
  month       Int?
  breed       String?
  photo       String?
  description String?
  adoption    Adoption[]
  lostpet     LostPet[]
  post        Post[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum StatusAdoption {
  Recibida
  Tramitando
  Completa
  Rechazado
}

model Adoption {
  id          Int            @id @default(autoincrement())
  pet         Pet?           @relation(fields: [petId], references: [id])
  petId       Int?           @unique
  jobType     String
  income      Decimal        @db.Money
  description String
  status      StatusAdoption @default(Tramitando)
  person      Person?        @relation(fields: [personDni], references: [dni])
  personDni   String?        @db.VarChar(10)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

enum PetStatus {
  Perdido
  Encontrado
}

model LostPet {
  id           Int       @id @default(autoincrement())
  pet          Pet?      @relation(fields: [petId], references: [id])
  petId        Int?      @unique
  lostLocation String?
  description  String?
  status       PetStatus @default(Perdido)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}
